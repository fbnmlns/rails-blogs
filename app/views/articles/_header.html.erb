<div class="row gx-5 pt-3">
  <div class="col-8">
    <div>
      <h1><%= link_to "Articles", root_path, class: "color-black" %></h1>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="col mt-4">
      <div class="d-flex justify-content-end">
        <div class="dropdown">
          <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="profile-picture-container-sm">
              <img class="rounded-circle img-fluid" alt="avatar1" src="https://i.pinimg.com/564x/30/12/b2/3012b259c2906cdb092bff71ff5c7e63.jpg" />
            </div>
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "Sign out", destroy_user_session_path, class: "dropdown-item", type: "button", method: :delete %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col mt-4">
      <div class="d-flex justify-content-end">
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-black mx-3" %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-black mx-3" %>
      </div>
    </div>
  <% end %>
</div>
<div>
  <hr class="hr" />
</div>