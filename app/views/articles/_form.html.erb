<%= form_with model: article do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field(:title, class: "form-control", placeholder: :title) %>
    <%= form.label :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-floating mb-3">
    <%= form.text_field(:subtitle, class: "form-control", placeholder: :subtitle) %>
    <%= form.label :subtitle %>
    <% article.errors.full_messages_for(:subtitle).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-floating mb-3">
    <%= form.text_field(:image, class: "form-control", placeholder: :image) %>
    <%= form.label :image %>
    <% article.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="field mb-3">
    <%= form.rich_text_area(:content ) %>
    <% article.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="btn-group" role="group">
    <%= form.submit(class: "btn btn-black btn-md") %>
  </div>
<% end %>
