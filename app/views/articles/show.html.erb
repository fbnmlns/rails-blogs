<section>
  <div class="row gx-5 pt-3">
    <div class="col">
      <div>
        <p><%= link_to "Blog", root_path %></p>
      </div>
    </div>
    <% if @article.user == current_user %>
      <div class="col">
        <div class="d-flex justify-content-end">
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-primary mx-3" %>
          <%= link_to "Destroy", article_path(@article), 
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } , class: "btn btn-outline-danger mx-3" %>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <div>
      <h1 class="display-2"><%= @article.title %></h1>
      <%= image_tag( @article.image, :class => "img-fluid", :alt => "...") %>
    </div>
    <hr class="hr" />
    <div>
      <p><%= @article.content %></p>
    </div>
    <hr class="hr"/>
  </div>
  <div>
    <h2>Comments</h2>
    <%= render @article.comments %>
    <h2>Add a comment:</h2>
    <%= render "comments/form", article: @article %>
  </div>
</section>